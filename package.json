{
  "publisher": "minko",
  "name": "image-manager",
  "displayName": "Image Manager",
  "version": "0.0.15",
  "private": true,
  "description": "Image Manager, a powerful yet simple image manager and viewer for VSCode",
  "type": "module",
  "icon": "assets/logo.png",
  "keywords": [
    "image",
    "viewer",
    "manager",
    "base64",
    "svg",
    "img",
    "pic",
    "png",
    "cropper",
    "compress",
    "tinypng",
    "sharp"
  ],
  "license": "MIT",
  "homepage": "https://github.com/hemengke1997/vscode-image-manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/hemengke1997/vscode-image-manager"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "author": "minko",
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "dev": "simple-git-hooks && tsup --watch",
    "ui:dev": "vite -c vite.config.ts -m development",
    "ui:build": "vite build -c vite.config.ts -m production",
    "build": "rm -rf dist && tsup",
    "test": "run-s test:unit",
    "test:unit": "vitest",
    "vscode:prepublish": "run-s ui:build build",
    "pack": "vsce package",
    "lint": "eslint .",
    "commitlint": "commitlint --edit",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG-CODE.md -s -r 0",
    "release": "bumpp package.json --commit --tag --no-push --all -x \"npm run changelog\"",
    "publish": "vsce publish"
  },
  "contributes": {
    "commands": [
      {
        "command": "image-manager.open-image-manager",
        "title": "Open Image Manager"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "image-manager.open-image-manager",
          "group": "z_commands"
        }
      ]
    },
    "keybindings": [
      {
        "command": "image-manager.open-image-manager",
        "key": "shift+alt+i",
        "mac": "cmd+alt+i"
      }
    ],
    "configuration": {
      "title": "Image Manager Settings",
      "properties": {
        "image-manager.warningSize": {
          "type": [
            "number",
            "boolean"
          ],
          "default": 500,
          "description": "show warning dot if image size is larger than this value (KB)"
        },
        "image-manager.imageDefaultWidth": {
          "type": "number",
          "default": 100,
          "description": "default width of image (px)"
        },
        "image-manager.scaleStep": {
          "type": "number",
          "default": 0.1,
          "description": "scale step when zooming image list"
        },
        "image-manager.exclude": {
          "type": [
            "array"
          ],
          "items": {
            "type": "string"
          },
          "default": [],
          "examples": [
            "**/some-dist/**",
            "some-dist",
            "**/*.ico"
          ],
          "description": "scan images not in exclude (pattern syntax of micromatch)"
        },
        "image-manager.imageType": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "svg",
            "png",
            "jpeg",
            "jpg",
            "ico",
            "gif",
            "webp",
            "bmp",
            "tif",
            "apng"
          ],
          "description": "scan images with imageType"
        },
        "image-manager.compress.replace": {
          "type": "boolean",
          "default": true,
          "description": "replace original image with compressed image"
        },
        "image-manager.compress.method": {
          "type": "string",
          "default": "sharp",
          "enum": [
            "sharp",
            "tinypng"
          ],
          "description": "compress method. If sharp installed, use sharp, else use tinypng"
        },
        "image-manager.compress.tinypngKey": {
          "type": "string",
          "default": "",
          "description": "tinypng key. If choose tinypng, you should set this key which can be get from https://tinypng.com/developers. If not set, it will use unstable key"
        },
        "image-manager.compress.quality": {
          "type": "number",
          "examples": [
            60
          ],
          "default": 60,
          "description": "quality of compressed image used in sharp which is between 0 and 100"
        }
      }
    }
  },
  "dependencies": {
    "tinify": "^1.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@electron/rebuild": "^3.4.1",
    "@minko-fe/commitlint-config": "^2.0.7",
    "@minko-fe/eslint-config": "^2.0.7",
    "@minko-fe/html-transform": "^0.1.16",
    "@minko-fe/lodash-pro": "^0.1.16",
    "@minko-fe/tsconfig": "^2.0.7",
    "@types/eslint": "^8.56.0",
    "@types/jsonfile": "^6.1.4",
    "@types/micromatch": "^4.0.6",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/user-agents": "^1.0.4",
    "@types/vscode": "^1.60.0",
    "@types/vscode-webview": "^1.57.4",
    "@vscode/vsce": "^2.22.0",
    "bumpp": "^9.2.1",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.55.0",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "image-size": "^1.0.2",
    "is-wsl": "^3.1.0",
    "jsonfile": "^6.1.0",
    "micromatch": "^4.0.5",
    "npm-run-all": "^4.1.5",
    "sharp": "^0.32.5",
    "simple-git-hooks": "^2.9.0",
    "tsup": "6.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "user-agents": "^1.1.79",
    "vite": "^4.5.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-i18n-detector": "^2.2.0",
    "vitest": "^0.34.6"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "workspaces": [
    "src/webview/ui-framework/",
    "src/webview/"
  ],
  "simple-git-hooks": {
    "commit-msg": "npm run commitlint",
    "pre-commit": "npm run lint"
  }
}
