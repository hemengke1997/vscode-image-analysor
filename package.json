{
  "publisher": "minko",
  "name": "image-manager",
  "displayName": "Image Manager",
  "version": "0.5.1",
  "private": true,
  "description": "Compress, crop and preview images in vscode",
  "icon": "assets/logo.png",
  "keywords": [
    "image",
    "viewer",
    "cropper",
    "compress",
    "manager",
    "base64",
    "svg",
    "img",
    "pic",
    "png"
  ],
  "license": "MIT",
  "homepage": "https://github.com/hemengke1997/vscode-image-manager",
  "bugs": {
    "url": "https://github.com/hemengke1997/vscode-image-manager"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hemengke1997/vscode-image-manager"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "author": "minko",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onWebviewPanel:ImageManagerPanel"
  ],
  "scripts": {
    "ui:dev": "vite -m development",
    "vsc:dev": "run-s build:i18n dev",
    "dev": "tsup --watch",
    "build": "run-s build:i18n ui:build vsc:build",
    "ui:build": "vite build -m production",
    "vsc:build": "rm -rf dist && tsup",
    "test": "run-s test:unit",
    "test:unit": "vitest --run",
    "test:dev": "vitest",
    "prepare": "simple-git-hooks",
    "lint": "run-s type-check eslint",
    "type-check": "tsc --noEmit",
    "eslint": "eslint .",
    "commitlint": "commitlint --edit",
    "up": "taze",
    "build:i18n": "tsx scripts/build-i18n",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG-CODE.md -s -r 0",
    "bump": "bumpp package.json --no-commit --tag --no-push --all -x \"npm run changelog\"",
    "vscode:prepublish": "npm run build",
    "pack": "vsce package",
    "publish": "vsce publish"
  },
  "contributes": {
    "commands": [
      {
        "command": "image-manager.open-image-manager",
        "title": "%pkg.title%"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "image-manager.open-image-manager"
        }
      ],
      "explorer/context": [
        {
          "command": "image-manager.open-image-manager",
          "group": "z_commands"
        }
      ]
    },
    "keybindings": [
      {
        "command": "image-manager.open-image-manager",
        "key": "shift+alt+i",
        "mac": "cmd+alt+i"
      }
    ],
    "configuration": {
      "title": "Image Manager",
      "properties": {
        "image-manager.file.root": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "%pkg.file.root%"
        },
        "image-manager.file.exclude": {
          "type": [
            "array"
          ],
          "items": {
            "type": "string"
          },
          "default": [],
          "examples": [
            "**/some-dist/**",
            "some-dist",
            "**/*.ico",
            "!**/dist/**"
          ],
          "description": "%pkg.file.exclude%"
        },
        "image-manager.file.scan": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "svg",
            "png",
            "jpeg",
            "jpg",
            "ico",
            "gif",
            "webp",
            "bmp",
            "tif",
            "apng",
            "tiff",
            "avif"
          ],
          "description": "%pkg.file.scan%"
        },
        "image-manager.appearance.theme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "dark",
            "light"
          ],
          "description": "%pkg.appearance.theme%"
        },
        "image-manager.appearance.language": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "en",
            "zh-CN"
          ],
          "description": "%pkg.appearance.language%"
        },
        "image-manager.appearance.primaryColor": {
          "type": "string",
          "format": "color-hex",
          "description": "%pkg.appearance.primaryColor%"
        },
        "image-manager.viewer.warningSize": {
          "type": [
            "number",
            "boolean"
          ],
          "default": 1024,
          "description": "%pkg.viewer.warningSize%"
        },
        "image-manager.viewer.imageWidth": {
          "type": "number",
          "default": 100,
          "description": "%pkg.viewer.imageWidth%"
        },
        "image-manager.viewer.imageBackgroundColor": {
          "type": "string",
          "default": "#1a1a1a",
          "format": "color-hex",
          "description": "%pkg.viewer.imageBackgroundColor%"
        }
      }
    }
  },
  "devDependencies": {
    "@ant-design/colors": "^7.0.2",
    "@commitlint/cli": "^18.6.1",
    "@ctrl/tinycolor": "^4.0.3",
    "@minko-fe/commitlint-config": "^2.0.7",
    "@minko-fe/eslint-config": "^2.1.2",
    "@minko-fe/html-transform": "^0.1.17",
    "@minko-fe/lodash-pro": "^0.2.3",
    "@minko-fe/react-hook": "^0.2.5",
    "@minko-fe/tsconfig": "^2.0.7",
    "@minko-fe/vite-config": "^0.2.3",
    "@types/eslint": "^8.56.5",
    "@types/fs-extra": "^11.0.4",
    "@types/micromatch": "^4.0.6",
    "@types/node": "^18.19.18",
    "@types/pixelmatch": "^5.2.6",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.21",
    "@types/react-highlight-words": "^0.16.7",
    "@types/vscode": "^1.60.0",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react": "^4.2.1",
    "@vscode/vsce": "^2.24.0",
    "antd": "^5.15.2",
    "bumpp": "^9.4.0",
    "classnames": "^2.5.1",
    "context-state": "^2.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cropperjs": "^1.6.1",
    "delay": "^6.0.0",
    "eslint": "^8.57.0",
    "execa": "^8.0.1",
    "exif-reader": "^2.0.1",
    "fast-glob": "^3.3.2",
    "framer-motion": "^11.0.10",
    "fs-extra": "^11.2.0",
    "fuse.js": "^7.0.0",
    "i18next": "^23.10.1",
    "meta-png": "^1.0.6",
    "micromatch": "^4.0.5",
    "mime": "^4.0.1",
    "npm-run-all2": "^6.1.2",
    "piexifjs": "^1.0.6",
    "pixelmatch": "^5.3.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-contexify": "^6.0.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "react-highlight-words": "^0.20.0",
    "react-hotkeys-hook": "^4.5.0",
    "react-i18next": "^14.1.0",
    "react-icons": "^5.0.1",
    "sharp": "0.32.6",
    "simple-git": "^3.22.0",
    "simple-git-hooks": "^2.10.0",
    "strict-event-emitter": "^0.5.1",
    "tailwind-antd-preset": "^0.0.4",
    "tailwindcss": "^3.4.1",
    "taze": "^0.13.3",
    "ts-key-enum": "^2.0.12",
    "ts-retry": "^4.2.5",
    "tsup": "6.7.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "un-detector": "^1.1.0",
    "vite": "^5.1.6",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-i18n-detector": "^2.2.2",
    "vitest": "^1.3.0"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "simple-git-hooks": {
    "commit-msg": "npm run commitlint",
    "pre-commit": "npm run lint"
  },
  "overrides": {
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
    }
  }
}
